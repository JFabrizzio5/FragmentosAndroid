<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/fragmentdatossaludos"
            android:name="com.example.fragmentsaludito.fragdatossaludos"
            tools:layout="@layout/fragment_fragsaludos"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/fragmentsaludos"
            android:name="com.example.fragmentsaludito.fragsaludos"
            tools:layout="@layout/fragment_fragsaludos"/>

    </LinearLayout>
</LinearLayout>