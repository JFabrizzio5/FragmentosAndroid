<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/fragmentcalcula"
            android:name="com.example.fragmentsaludito.fragopera"
            tools:layout="@layout/fragment_fragcalcures"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/fragmentcalculares"
            android:name="com.example.fragmentsaludito.fragresultados"
            tools:layout="@layout/fragment_fragresultados"/>


    </LinearLayout>
</LinearLayout>